@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model IEnumerable<AsansorTakipV3.Models.Marka>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Markalar</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <a href="@Url.Action("Detay","Markalar")"><input type="submit" class="btn btn-primary" value="Yeni Marka Ekle"></a>
                    </div>
                    <table width="100" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Marka</th>
                                <th style="width:19px;"></th>
                                <th style="width:19px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(o => o.Id))
                            {
                                <tr class="odd gradeX">
                                    <td>@item.Adi</td>
                                    <td><a href="@Url.Action("Detay", "Markalar", new { Id = item.Id })"><i class="icon icon-edit"></i></a></td>
                                    <td><a href="@Url.Action("DetaySil", "Markalar", new { Id = item.Id })"><i class="icon icon-delete"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
