@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model AsansorTakipV3.Models.Musteri
<div class="gtco-section border-bottom">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8">
                <div class="col-md-12 animate-box">
                    <h3>Müşteri Kaydı</h3>
                    <form method="post">
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label>Adı</label>
                                <input type="text" id="Adi" class="form-control" placeholder="Müşteri Adı" value="@Model.Adi" name="Adi">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label>Soyadı</label>
                                <input type="text" id="Soyadi" class="form-control" placeholder="Müşteri Soyadi" value="@Model.Soyadi" name="Soyadi">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label>Telefon</label>
                                <input type="text" id="Telefon" class="form-control" placeholder="Telefon" value="@Model.Telefon" name="Telefon">
                            </div>
                        </div>
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label>Durumu</label>
                                    <select name="Durumu">
                                        <option value="1" @(Model.Durumu==1?"selected":"")> aktif</option>
                                        <option value="0" @(Model.Durumu == 0 ? "selected" : "" )> Pasif</option>
                                    </select>
                                </div>
                            </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label >Adres</label>
                                <textarea name="Adres" id="Adres" cols="30" rows="10" class="form-control" placeholder="Adres"  >@Model.Adres</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Kaydet - Güncelle" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>