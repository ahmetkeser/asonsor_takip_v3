@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model IEnumerable<AsansorTakipV3.Models.Musteri>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Müşteriler</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <a href="@Url.Action("Detay","Musteriler")"><input type="submit" class="btn btn-primary" value="Yeni Müşteri Ekle"></a>
                    </div>
                    <table width="100" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Adres</th>
                                <th>Durumu</th>
                                <th>Resim</th>
                                <th>Müşteri Bilgi Güncelle</th>
                                <th>Hizmet</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.Adi</td>
                                    <td>@item.Soyadi</td>
                                    <td>@item.Adres</td>
                                    @if (item.Durumu == 0)
                                    {
                                        <td class="center">Pasif Müsteri</td>
                                    }
                                    else
                                    {
                                        <td class="center">Aktif Müşteri</td>
                                    }
                                    <td class="center">@item.Resim</td>
                                    <td><a href="@Url.Action("Detay", "Musteriler", new { Id = item.Id })"><i class="icon icon-edit"></i></a></td>
                                    <td><a href="@Url.Action("Hizmet", "Musteriler", new { Id = item.Id })"><i class="icon icon-edit"></i></a></td>
                                    <td><a href="@Url.Action("Sill", "Musteriler", new { Id = item.Id })"><i class="icon icon-delete"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
